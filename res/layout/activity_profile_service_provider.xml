                android:layout_height="wrap_content"
                android:text="WorkType"
                android:id="@+id/worktypeServiceProvider"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </LinearLayout>

